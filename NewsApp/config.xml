<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.newsapp" version="1.0.0" xmlns="http://www.bootstrap.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NewsApp</name>
    <description>
        Newsapp
    </description>
    <author email="newsap@gmail.com" href="http://cordova.io">
        user
    </author>
      <icon src="assets/fav.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1.1.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
